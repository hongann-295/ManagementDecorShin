@model IEnumerable<Role>
@{
    ViewBag.Title = "Role management";
    Layout = "_LayoutDashboard";
}

<h4>@ViewBag.Title</h4>

<a asp-controller="Role" asp-action="Create" class="btn btn-outline-primary" style="width:auto">Create Role</a>

<table class="table table-striped table-hover mt-2">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var role in Model)
            {
                <tr>
                    <td>@role.RoleId</td>
                    <td>@role.RoleName</td>
                    <td>
                        <a asp-controller="Role" asp-action="Edit" asp-route-id="@role.RoleId" class="btn btn-outline-primary">Edit</a>
                        <a asp-controller="Role" asp-action="Delete" asp-route-id="@role.RoleId" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>