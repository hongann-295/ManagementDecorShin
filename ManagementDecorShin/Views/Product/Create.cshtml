@model HomeCreateViewModel
@{
    ViewBag.Title = "Create product";
    Layout = "_LayoutDashboard";
    var categories = ViewBag.Categories as List<Category>;
}

    <form enctype="multipart/form-data" asp-controller="Product" asp-action="Create" method="post" class="mt-3">
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="ProductName"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="CategoryId"></label>
            </div>
            <div class="col-sm-10">
                <select asp-for="CategoryId" class="custom-select">
                    <option value="Select a department"></option>
                    @if (categories != null)
                    {
                        foreach (var cate in categories)
                        {
                            <option value="@cate.CategoryId">@cate.CategoryName</option>
                        }
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Description"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Price"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Count"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="ProductImage"></label>
            </div>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input class="custom-file-input" asp-for="ProductImage" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-outline-primary">Create</button>
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-warning">Back</a>
            </div>

        </div>
    </form>


@section Scripts{
    <script>
        $(document).ready(function () {
            $(".custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);

            });
        });
    </script>
}