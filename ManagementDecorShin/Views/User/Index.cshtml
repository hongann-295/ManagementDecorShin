@model IEnumerable<UserViewModel>
@{
    ViewBag.Title = "Management users";
    Layout = "_LayoutDashboard";
    var count = 1;

}

<h4>@ViewBag.Title</h4>

<a asp-controller="User" asp-action="Create" class="btn btn-outline-primary" style="width:auto">Create User</a>

<table class="table table-striped table-hover mt-2">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>City</th>
            <th>Address</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@count</td>
                    <td>@user.Email</td>
                    <td>@user.City</td>
                    <td>@user.Address</td>
                    <td>@user.RolesName</td>
                    <td>
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-outline-primary">Edit</a>
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
                count++;
            }
        }
    </tbody>
</table>