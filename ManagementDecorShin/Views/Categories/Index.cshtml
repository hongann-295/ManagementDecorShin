@model IEnumerable<Category>
@{
    ViewBag.Title = "Categories management";
    Layout = "_LayoutDashboard";
}

<h4>@ViewBag.Title</h4>

<a asp-controller="Categories" asp-action="Create" class="btn btn-outline-primary" style="width:auto">Create category</a>

<table class="table table-striped table-hover mt-2">
    <thead>
        <tr>
            <th>Id</th>
            <th>Category Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var cate in Model)
            {
                <tr>
                    <td>@cate.CategoryId</td>
                    <td>@cate.CategoryName</td>
                    <td>
                        <a asp-controller="Categories" asp-action="Edit" asp-route-id="@cate.CategoryId" class="btn btn-outline-primary">Edit</a>
                        <a asp-controller="Categories" asp-action="Delete" asp-route-id="@cate.CategoryId" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>